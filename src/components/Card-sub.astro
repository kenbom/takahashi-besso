---
	import { Image } from "astro:assets";

	interface Props {
		title: string;
		body: string;
		href: string;
		image: ImageMetadata;
	}

	const { href, title, body, image } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<div class="card-top">
			<h2>
				{title}
				<!-- <span>&rarr;</span> -->
			</h2>
			<p>
				{body}
			</p>
			<Image class="photo-card" src={image} alt={`cottage`} quality='mid' width={} />
		</div>
	</a>
</li>

