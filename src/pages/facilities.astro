---
  import Layout from "../layouts/Layout.astro";
  // import CardTop from '../components/Card-top.astro';
  import CardSub from '../components/Card-sub.astro'
  import { Image } from "astro:assets";
  import image1 from '../assets/facilities/kitchen.jpg'
  import image2 from '../assets/facilities/bath-room.jpg'
  import image3 from '../assets/facilities/syouji.jpg'
  // import image4 from '../assets/garden/from-north.jpg'
  import image5 from '../assets/garden-sky.jpg'
  import image6 from '../assets/facilities/hallway.jpg'

  import '@fontsource/shippori-mincho';
---

<Layout title="Facilities">
   <hero class="page-subs">
    <Image class="photo-hero" src={image6} alt={`客間廊下`} quality='mid' />
    <CardSub href="" title="台所" body="最低限の煮炊きが可能です" image={image1} />
    <CardSub href="" title="浴室" body="ここだけ西洋式としました" image={image2} />
    <CardSub href="" title="外窓" body="障子とガラスはよく合います" image={image3} />
    <!-- <CardSub href="" title="前庭" body="春には丸々とした梅の実を収穫" image={image4} /> -->

  </hero>

  <style>
    .page-subs {
      display: grid;
      grid-template-columns: minmax(32px, 1fr) minmax(auto, 1120px) minmax(32px,
          1fr);
      ;
      row-gap: 20px;
      font-family: 'Shippori Mincho';

      >* {
        grid-column: 2 / -2;
      }

      >.photo-hero {
        grid-column: 2 / -2;
        grid-row: 1 / 2;
        width: 100%;
        height: 500px;
        object-fit: cover;
      }
  </style>
</Layout>