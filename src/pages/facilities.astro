---
import Layout from '../layouts/Layout.astro';
import CardSub from '../components/Card-sub.astro';
import { Image } from 'astro:assets';
import image1 from '../assets/facilities/kitchen.jpg';
import image2 from '../assets/facilities/bath-room.jpg';
import image3 from '../assets/facilities/syouji.jpg';
import image6 from '../assets/facilities/hallway.jpg';

import '@fontsource/shippori-mincho';
---

<Layout title="設備">
  <hero class="page-subs">
    <Image class="photo-hero" src={image6} alt={`客間廊下`} quality="mid" />
    <CardSub title="台所" body="最低限の煮炊きが可能です" image={image1} />
    <CardSub title="浴室" body="ここだけ西洋式としました" image={image2} />
    <CardSub title="外窓" body="障子とガラスはよく合います" image={image3} />
  </hero>

  <style>
    .page-subs {
      display: grid;
      grid-template-columns: minmax(18px, 1fr) minmax(auto, 1120px) minmax(
          18px,
          1fr
        );
      row-gap: 20px;
      font-family: 'Shippori Mincho';

      > * {
        grid-column: 2 / -2;
      }

      > .photo-hero {
        grid-row: 1 / 2;
        width: 100%;
        height: 500px;
        object-fit: cover;
      }
    }
  </style>
</Layout>
