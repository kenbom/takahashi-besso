	import CardTop from '../components/Card-top.astro';
	import Footer from '../components/Footer.astro'
	import { Image } from "astro:assets";
	import image1 from '../assets/house-front.jpg'
	import image2 from '../assets/bamboo-thicket.jpg'
	import image3 from '../assets/garden-sky.jpg'
	import image4 from '../assets/tokono-ma.jpg'
	import image5 from '../assets/yane.jpg'
	import image6 from '../assets/facilities/hallway.jpg'

	import '@fontsource/shippori-mincho';
---

<!doctype html>
<html lang="ja">

<head>
	<meta charset="UTF-8" />
	<meta name="description" content="Astro description" />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="generator" content={Astro.generator} />
	<title>{}</title>
</head>

</html>

<hero class="page-hero">
	<Image class="photo-hero" src={image1} alt={`cottage`} quality='mid' width={} />
	<p></p>
	<h1 class="page-title"><p>小田原 風祭</p>髙橋別荘</h1>

	<CardTop href="/garden/" title="Garden" body="庭園" image={image3} />
	<CardTop href="/rooms/" title="Rooms" body="居室" image={image4}></CardTop>
	<CardTop href="/facilities/" title="Facilities" body="設備" image={image6} />
	<CardTop href="/around/" title="Around" body="周辺" image={image2} />

	<p class="operater">運営：猫髭工房</p>
</hero>

