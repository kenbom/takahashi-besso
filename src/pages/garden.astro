---
  import Layout from "../layouts/Layout.astro";
  // import CardTop from '../components/Card-top.astro';
  import CardSub from '../components/Card-sub.astro'
  import { Image } from "astro:assets";
  import image1 from '../assets/garden/sagami-bay.jpg'
  import image2 from '../assets/garden/bamboo.jpg'
  import image3 from '../assets/garden/from-east-bank.jpg'
  // import image4 from '../assets/garden/from-north.jpg'
  import image5 from '../assets/garden-sky.jpg'

  import '@fontsource/shippori-mincho';
---

<Layout title="Garden">
  <hero class="page-subs">
    <Image class="photo-hero" src={image5} alt={`garden`} quality='mid' />
    <CardSub href="" title="北の遠望" body="庭の樹間から望む相模湾" image={image1} />
    <CardSub href="" title="西の竹林" body="裏庭から広がる竹林" image={image2} />
    <CardSub href="" title="東の庭" body="野趣あふれる夏の前庭" image={image3} />
    <!-- <CardSub href="" title="前庭" body="春には丸々とした梅の実を収穫" image={image4} /> -->

  </hero>

  <style>
    .page-subs {
      display: grid;
      grid-template-columns: minmax(32px, 1fr) minmax(auto, 1120px) minmax(32px,
          1fr);
      ;
      row-gap: 20px;
      font-family: 'Shippori Mincho';

      >* {
        grid-column: 2 / -2;
      }

      >.photo-hero {
        grid-column: 2 / -2;
        grid-row: 1 / 2;
        width: 100%;
        height: 500px;
        object-fit: cover;
      }
  </style>
</Layout>