---
import Layout from '../layouts/Layout.astro';
import CardSub from '../components/Card-sub.astro';
import { Image } from 'astro:assets';
import image1 from '../assets/garden/sagami-bay.jpg';
import image2 from '../assets/garden/bamboo.jpg';
import image3 from '../assets/garden/from-east-bank.jpg';
import image5 from '../assets/garden-sky.jpg';
import { ViewTransitions, slide } from 'astro:transitions';

import '@fontsource/shippori-mincho';
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{}</title>
    <ViewTransitions />
  </head>

  <body>
    <Layout title="庭園">
      <hero class="page-subs">
        <Image class="photo-hero" src={image5} alt={`庭園`} quality="mid" />
        <CardSub
          title="北東の遠望"
          body="庭の樹間から望む相模湾"
          image={image1}
        />
        <CardSub title="西の竹林" body="裏庭から広がる竹林" image={image2} />
        <CardSub title="東の庭" body="野趣あふれる夏の前庭" image={image3} />
      </hero>
    </Layout>

    <style>
      .page-subs {
        display: grid;
        grid-template-columns: minmax(32px, 1fr) minmax(auto, 1120px) minmax(
            32px,
            1fr
          );
        row-gap: 20px;
        font-family: 'Shippori Mincho';

        > * {
          grid-column: 2 / -2;
        }

        > .photo-hero {
          grid-row: 1 / 2;
          width: 100%;
          height: 500px;
          object-fit: cover;
        }
      }
    </style>
  </body>
</html>
