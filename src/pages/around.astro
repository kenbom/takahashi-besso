---
  import Layout from "../layouts/Layout.astro";
  // import CardTop from '../components/Card-top.astro';
  import CardSub from '../components/Card-sub.astro'
  import { Image } from "astro:assets";
  import image1 from '../assets/around/kazamatsuri-stn.jpg'
  import image2 from '../assets/around/hayakawa.jpg'
  import image3 from '../assets/around/suzuhiro-front.jpg'
  // import image4 from '../assets/garden/from-north.jpg'
  import image5 from '../assets/bamboo-thicket.jpg'

  import '@fontsource/shippori-mincho';
---

<Layout title="Around">
  <hero class="page-subs">
    <Image class="photo-hero" src={image5} alt={`竹林`} quality='mid' />
    <CardSub href="" title="風祭駅[徒歩10分]" body="箱根登山鉄道で小田原から２駅" image={image1} />
    <CardSub href="" title="早川[徒歩15分]" body="箱根から穏やかに海へ" image={image2} />
    <CardSub href="" title="鈴廣本店[徒歩10分]" body="小田原かまぼこの老舗" image={image3} />
    <!-- <CardSub href="" title="前庭" body="春には丸々とした梅の実を収穫" image={image4} /> -->

  </hero>

  <style>
    .page-subs {
      display: grid;
      grid-template-columns: minmax(32px, 1fr) minmax(auto, 1120px) minmax(32px,
          1fr);
      ;
      row-gap: 20px;
      font-family: 'Shippori Mincho';

      >* {
        grid-column: 2 / -2;
      }

      >.photo-hero {
        grid-column: 2 / -2;
        grid-row: 1 / 2;
        width: 100%;
        height: 500px;
        object-fit: cover;
      }
  </style>
</Layout>